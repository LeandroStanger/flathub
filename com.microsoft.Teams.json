{
  "id": "com.microsoft.Teams",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "19.08",
  "command": "teams",
  "tags": [
    "proprietary"
  ],
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=pulseaudio",
    "--device=all",
    "--filesystem=home",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.kde.StatusNotifierWatcher"
  ],
  "modules": [
    {
      "name": "ar",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 /usr/lib/$(gcc -print-multiarch)/libbfd-*.so -t ${FLATPAK_DEST}/lib/",
        "install -Dm0755 $(which ar) ${FLATPAK_DEST}/bin/"
      ]
    },
    {
      "name": "desktop-file-edit",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 $(which desktop-file-edit) ${FLATPAK_DEST}/bin/"
      ]
    },
    {
      "name": "libsecret",
      "buildsystem": "meson",
      "config-opts": [
        "-Dmanpage=false",
        "-Dvapi=false",
        "-Dgtk_doc=false"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share/gir-1.0",
        "/share/man",
        "*.la"
      ],
      "sources": [
        {
          "commit": "f576dfbe50f9aed22802ad0db0356d081f467d7a",
          "tag": "0.19.1",
          "type": "git",
          "url": "https://gitlab.gnome.org/GNOME/libsecret.git"
        }
      ]
    },
    {
      "name": "teams",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 apply_extra.sh ${FLATPAK_DEST}/bin/apply_extra",
        "install -Dm0755 teams.sh ${FLATPAK_DEST}/bin/teams",
        "install -Dm0644 ${FLATPAK_ID}.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml"
      ],
      "sources": [
        {
          "type": "file",
          "path": "apply_extra.sh"
        },
        {
          "type": "file",
          "path": "teams.sh"
        },
        {
          "type": "file",
          "path": "com.microsoft.Teams.metainfo.xml"
        },
        {
          "type": "extra-data",
          "filename": "teams.deb",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://packages.microsoft.com/repos/ms-teams/pool/main/t/teams/teams_1.2.00.32451_amd64.deb",
          "sha256": "28d8a0e644a4bb9d4ee9295953b97b7fa6558b8a9d1d28363a594f5cde1c05dc",
          "size": 64874490,
          "x-checker-data": {
            "type": "debian-repo",
            "package-name": "teams",
            "root": "https://packages.microsoft.com/repos/ms-teams/",
            "dist": "stable",
            "component": "main"
          }
        }
      ]
    }
  ]
}
